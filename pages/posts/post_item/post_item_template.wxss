/*作者头像——日期——标题 */
.post_container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top:1px solid #ededed;
   padding-bottom: 5px; 
}
.post_author_date{
  margin: 10rpx 0 20rpx 10rpx;
}
.post_author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post_date{
  margin-left:20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}
.post_title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}

/*主图  */
.post_image{
  margin-left: 16rpx;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

/*文字内容简介  */
.post_content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

/*评论点赞  */
.post_like{
  display: flex;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
  font-size: 13px;
}
.post_like_image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post_like_font{
   vertical-align: middle;
   margin-right: 20px; 
}

